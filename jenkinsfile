pipeline {
	agent any

	environment {
		mavenHome = tool 'mavenHome'
	}

	tools {
		jdk 'JAVA_HOME'
	}

	stages {

		stage('Build'){
			steps {
				bat "mvn clean install -DskipTests"
			}
		}

		 stage('Test'){
			steps{
				bat "mvn test"
			}
		}

		stage('Deploy') {
			steps {
			   // bat "mvn jar:jar deploy:deploy"
			    bat "mvn war:war deploy adapters: [tomcat9(credentialsId: 'tomcat-credentials', path: '', url: 'http://localhost:8080/')], contextPath: 'boot-with-jenkins', war: 'target/*.war'"
			}
		}
	}
}

